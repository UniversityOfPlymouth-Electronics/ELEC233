`timescale 1 ps/ 1 ps
module behavioural_vlg_sample_tst(
	A,
	B,
	CTRL,
	sampler_tx
);
input  A;
input  B;
input  CTRL;
output sampler_tx;

reg sample;
time current_time;
always @(A or B or CTRL)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module behavioural_vlg_check_tst (
	Y_behave,
	sampler_rx
);
input  Y_behave;
input sampler_rx;

reg  Y_behave_expected;

reg  Y_behave_prev;

reg  Y_behave_expected_prev;

reg  last_Y_behave_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	Y_behave_prev = Y_behave;
end

// update expected /o prevs

always @(trigger)
begin
	Y_behave_expected_prev = Y_behave_expected;
end



// expected Y_behave
initial
begin
	Y_behave_expected = 1'bX;
	Y_behave_expected = #30000 1'b1;
	Y_behave_expected = #10000 1'bX;
end 
// generate trigger
always @(Y_behave_expected or Y_behave)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected Y_behave = %b | ",Y_behave_expected_prev);
	$display("| real Y_behave = %b | ",Y_behave_prev);
`endif
	if (
		( Y_behave_expected_prev !== 1'bx ) && ( Y_behave_prev !== Y_behave_expected_prev )
		&& ((Y_behave_expected_prev !== last_Y_behave_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port Y_behave :: @time = %t",  $realtime);
		$display ("     Expected value = %b", Y_behave_expected_prev);
		$display ("     Real value = %b", Y_behave_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_Y_behave_exp = Y_behave_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

module behavioural_vlg_vec_tst();
// constants                                           
// general purpose registers
reg A;
reg B;
reg CTRL;
// wires                                               
wire Y_behave;

wire sampler;                             

// assign statements (if any)                          
behavioural i1 (
// port map - connection between master ports and signals/registers   
	.A(A),
	.B(B),
	.CTRL(CTRL),
	.Y_behave(Y_behave)
);

// CTRL
initial
begin
	CTRL = 1'b0;
	CTRL = #50000 1'b1;
	CTRL = #50000 1'b0;
end 

// A
initial
begin
	A = 1'b0;
	A = #10000 1'b1;
	A = #10000 1'b0;
	A = #10000 1'b1;
	A = #10000 1'b0;
	A = #20000 1'b1;
	A = #10000 1'b0;
	A = #10000 1'b1;
	A = #10000 1'b0;
end 

// B
initial
begin
	B = 1'b0;
	B = #20000 1'b1;
	B = #20000 1'b0;
	B = #30000 1'b1;
	B = #20000 1'b0;
end 

behavioural_vlg_sample_tst tb_sample (
	.A(A),
	.B(B),
	.CTRL(CTRL),
	.sampler_tx(sampler)
);

behavioural_vlg_check_tst tb_out(
	.Y_behave(Y_behave),
	.sampler_rx(sampler)
);
endmodule

